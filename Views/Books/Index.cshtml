@model IEnumerable<LibraryManager.Models.Book>

@{
    ViewData["Title"] = "Books";
    var currentUserId = ViewBag.CurrentUserId as string;
}

<h1>Books</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Book</a>
    <a asp-controller="Authors" asp-action="Create" class="btn btn-secondary">Add Author</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="search" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" />
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Pub Year</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Title)</td>
        <td>@Html.DisplayFor(modelItem => item.Author.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.PubYear)</td>
        <td>@Html.DisplayFor(modelItem => item.Genre)</td>
        <td>
            @if (currentUserId != null && item.UserId.ToString() == currentUserId)
            {
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <span> | </span>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                    <button type="submit" class="btn btn-link p-0">Delete</button>
                </form>
            }
            else
            {
                <span class="text-muted">No actions</span>
            }
        </td>
    </tr>
}
    </tbody>
</table>